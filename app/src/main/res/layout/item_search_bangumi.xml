<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="?attr/selectableItemBackground">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/default_tiny_padding"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/app_bar_default_elevation">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/default_general_margin"
        android:gravity="center_vertical|top"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_tiny_padding"
        android:layout_toRightOf="@+id/card_view">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_padding"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/default_medium_text_size" />

        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_padding"
            android:textColor="@color/black_alpha_45"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_padding"
            android:textColor="@color/black_alpha_45"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>